<!DOCTYPE html>
<html>
  <head>
    <title>EcommerceStore</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
     <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

   <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>
    <nav>
  <ul>
    <li><%= link_to 'Home', root_path %></li>
    <li><%= link_to 'About', static_page_path(title: 'About') %></li>
    <li><%= link_to 'Contact', static_page_path(title: 'Contact') %></li>
    <li><%= link_to 'All Products', products_path %></li>
    <li><%= link_to 'Cart', cart_path, class: 'btn btn-primary' %></li>
    <% unless user_signed_in? %>
  <%= link_to "Sign in", new_user_session_path, class: "btn btn-primary" %>
<% end %>
    <% if user_signed_in? %>
  <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete } %>
<% end %>

  </ul>
</nav>
    <main class="container mx-auto mt-28 px-5 flex">
      <%= yield %>
      
    </main>
  </body>
</html>
