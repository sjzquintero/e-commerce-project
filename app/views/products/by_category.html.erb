<h1>Products in <%= @category.name %></h1>

<%= link_to 'Home', root_path %>

<div>
  <% @products.each do |product| %>
    <div>
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
      <p>Price: <%= product.price %></p>
      <%= image_tag url_for(product.image), size: "100x100" if product.image.attached? %>
    </div>
  <% end %>
</div>
