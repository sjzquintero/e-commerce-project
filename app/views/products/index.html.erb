<h1>All Products</h1>

<%= link_to 'Home', root_path %>

<%= form_with(url: search_products_path, method: "get", local: true) do |form| %>
  <%= form.text_field :query, placeholder: "Search products..." %>
  <%= form.submit "Search" %>
<% end %>

<% @products.each do |product| %>
  
<% end %>


<div>
  <% @products.each do |product| %>
    <div>
      <h2><%= link_to product.name, product_path(product) %></h2>
      <p><%= product.description %></p>
      <p>Price: <%= product.price %></p>
      <%= image_tag url_for(product.image), size: "100x100" if product.image.attached? %>
    </div>
  <% end %>
</div>

<%= paginate @products %>

