<h1><%= @product.name %></h1>

<%= link_to 'Home', root_path %>

<div>
  <h2>Description</h2>
  <p><%= @product.description %></p>

  <h2>Price</h2>
  <p><%= @product.price %></p>

  <h2>Stock</h2>
  <p><%= @product.stock %></p>

  <h2>Category</h2>
  <p><%= @product.category.name %></p>

  <h2>Image</h2>
  <%= image_tag url_for(@product.image), size: "300x300" if @product.image.attached? %>
</div>
